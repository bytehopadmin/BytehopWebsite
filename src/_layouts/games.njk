---
layout: base.njk
---

<div class="container">
  {% set previewGame = games | first %}

  <script src="{{ '/Games/UnityLoader.js' | url }}"></script>
    <script>
      UnityLoader.instantiate("unityContainer", "{{ previewGame.buildUrl | url }}");
    </script>

    <div id="unityContainer" style="margin: 0px"></div>

  <div class="row">
    {%- for game in games -%}
      <div class="col-sm-4">
        <h2>  {{ game.name | safe }} </h2>
        <a href="{{ game.link | url }}" class="" target="_blank">
        <img src="{{ game.icon | url }}" alt="{{ game.name | safe }}" width="100" height="100"> 
        </a>
      </div>
    {%- endfor -%}
  </div>
  
  {# <embed type="text/html" src="/Games/Cube_Flip/index.html" width="500" height="200">  #}
  
</div>

  

